<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/linearLayoutCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="8dp">

       <!-- <TextView
            android:id="@+id/txtSetFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="15sp" />-->

        <com.libRG.CustomTextView
            android:id="@+id/txtFirstCharecter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="#"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            app:lib_setRoundedView="true"
            app:lib_setShape="oval"
            app:lib_setStrokeWidth="0dp" />
        <!--  <TextView
              android:id="@+id/txtFirstCharecter"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:background="@drawable/textview_circuls"
              android:bottomRightRadius="65dp"
              android:gravity="center"
              android:text="#"
              android:textSize="25dp" />
  -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="16dp" />
</LinearLayout>
